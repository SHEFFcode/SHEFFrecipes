<header class="navbar navbar-fixed-top navbar-default">
    <div class="container">
      <%= link_to "myRecipies", root_path , class: "btn btn-lg btn-success", id: "logo" %>
      <% if logged_in? %>
        <div class="nav-item">
          <%= link_to "Add New Recipe", new_recipe_path , class: "btn btn-default btn-warning" %>
        </div>
        <ul class="nav-item">
          <li class="dropdown">
            <%= link_to "#", class: "btn btn-default btn-danger dropdown-toggle", "data-toggle" => "dropdown" do %>
              <%= current_user.chefname %> <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li> <%= link_to "View Profile", chef_path(current_user) %> </li>
              <li> <%= link_to "Edit Profile", edit_chef_path(current_user) %> </li>
              <li class="divider"></li>
              <li> <%= link_to "Log out", logout_path %> </li>
            </ul>
          </li>
        </ul>
      <% end %>
      <% if !logged_in? %>
        <div class="nav-item">
          <%= link_to "Log In", login_path, class: "btn btn-default btn-success" %>
        </div>
      <% end %>
    </div>
</header>